<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../public/style/main.css" rel="stylesheet" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Прийоми</title>
  </head>
  <body class="body">
    <a class="btn btn-info" href="/">Назад</a>
    <h1 class="text-center">Список прийомів</h1>
    <div class="table-responsive">
      <table class="table table-primary table-hover table-sm">
        <tr>
          <th>ID</th>
          <th>Дата</th>
          <th>час</th>
          <th>Послуга</th>
          <th>Ветеринар</th>
          <th>Клієнт</th>
        </tr>
        <% for (var i = 0; i < Appointment.length; i++) { %>
        <tr>
          <td><%= Appointment[i].id %></td>
          <td><%= Appointment[i].date %></td>
          <td><%= Appointment[i].time %></td>
          <td><%= Appointment[i].service_id %></td>
          <td><%= Appointment[i].vet_id %></td>
          <td><%= Appointment[i].client_id %></td>
          <td style="background-color: white">
            <a
              class="btn btn-danger"
              href="/api/appointment/delete/<%= Appointment[i].id%>"
              >Видалити</a
            >
          </td>
          <td style="background-color: white">
            <a
              class="btn btn-info"
              href="/api/appointment/<%= Appointment[i].id%>"
              >Редагувати</a
            >
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <h2 class="text-center">Додати прийом</h2>
    <form action="appointment" method="POST" class="text-center">
      <div class="mb-3">
        <label class="form-label">
          ID
          <input
            type="number"
            placeholder="id"
            class="form-control"
            id="id"
            name="id"
            min="1"
          />
        </label>
        <label class="form-label">
          Дата
          <input
            type="date"
            class="form-control"
            placeholder="Дата"
            id="date"
            name="date"
          />
        </label>
        <label class="form-label">
          Час
          <input
            type="time"
            class="form-control"
            placeholder="Час"
            id="time"
            name="time"
          />
        </label>
        <label class="form-label">
          ID Посгуги
          <input
            type="number"
            placeholder="id послуги"
            class="form-control"
            id="service_id"
            name="service_id"
            min="1"
          />
        </label>
        <label class="form-label">
          ID Ветеринара
          <input
            type="number"
            placeholder="id ветеринара"
            class="form-control"
            id="vet_id"
            name="vet_id"
            min="1"
          />
        </label>
        <label class="form-label">
          ID Клієнта
          <input
            type="number"
            placeholder="id клієнта"
            class="form-control"
            id="client_id"
            name="client_id"
            min="1"
          />
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Додати</button>
    </form>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
